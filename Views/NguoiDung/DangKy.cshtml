
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Layout/_LayoutUser.cshtml";
}

<style>
    body {
        margin: 0;
        padding: 0;
        background-size: cover;
        background-position: center;
        font-family: sans-serif;
    }

    .loginbox {
        width: 435px;
        height: 413px;
        background: #023;
        color: #fff;
        top: 176%;
        left: 50%;
        position: absolute;
        transform: translate(-50%,-50%);
        box-sizing: border-box;
        padding: 45px 29px;
    }
    .avatar {
        width: 120px;
        height: 108px;
        border-radius: 78%;
        position: absolute;
        top: -90px;
        left: calc(47% - 50px);
    }
    

    h2 {
        margin: 0;
        padding: 0 0 20px;
        text-align: center;
        font-size: 22px;
    }

    input {
        color: brown;
        line-height: normal;
    }
</style>

<div class="section-title-5 mb-30" style="text-align:center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
</div>
<body>

    <div class="loginbox">
        <img src="~/img/logo/signup.png" class="avatar">
            <table align="center">


                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
                    <tr style="height:40px">
                        <td>Họ tên khách hàng: </td>
                        <td>
                            @Html.TextBox("HoTenKhachHang")
                            @ViewData["Loi1"]
                        </td>
                    </tr>


                    <tr style="height:40px">
                        <td>Tên đăng nhập: </td>
                        <td>
                            @Html.TextBox("TenDangNhap")
                            @ViewData["Loi2"]
                        </td>
                    </tr>


                    <tr style="height:40px">
                        <td>Mật khẩu:</td>
                        <td>
                            @Html.TextBox("MatKhau")
                            @ViewData["Loi3"]
                        </td>
                    </tr>


                    <tr style="height:40px">
                        <td>Nhập lại mật khẩu: </td>
                        <td>
                            @Html.TextBox("MatKhauNhapLai")
                            @ViewData["Loi4"]
                        </td>
                    </tr>


                    <tr style="height:40px">
                        <td>Điện thoại: </td>
                        <td>
                            @Html.TextBox("DienThoai")
                            @ViewData["Loi5"]
                        </td>
                    </tr>


                    <tr style="height:40px">
                        <td>Ngày sinh: </td>
                        <td>
                            <input type="date" name="NgaySinh" />
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td>Địa chỉ: </td>
                        <td>
                            @Html.TextBox("DiaChi")
                            @ViewData["Loi7"]
                        </td>
                    </tr>


                    <tr style="height:40px">
                        <td>Email: </td>
                        <td>
                            @Html.TextBox("Email")
                            @ViewData["Loi6"]
                        </td>
                    </tr>

                    <tr style="height:40px">
                        <td></td>
                        <td>
                            <input type="submit" value="Đăng Ký" />
                        </td>
                    </tr>
                }


            </table>

        
    </div>
</body>