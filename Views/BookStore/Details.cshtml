@using WebMVC_BookStore.Models;
@model Sach
<style type="text/css">
    #dat-mua a {
        clear: both;
        background-color: darkorange;
        color: white;
        width: 227px;
        height: 60px;
        display: block;
        float: right;
        text-align: center;
        text-decoration: none;
        font-weight: 900;
    }

        #dat-mua a:hover {
            background-color: white;
            color: lightskyblue;
        }
</style>


@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Layout/_LayoutUser.cshtml";
}


<div class="section-title-5 mb-30">
    <h2>Thông Tin Chi Tiết Sách</h2>
</div>

<div>
    <div style="width:40% ; float:left; border-left:dotted 1px; border-color:azure">
        <img src="~/img/HinhAnhSanPham/@Model.AnhBia" />
    </div>
    <div style="width:60%; float:left; padding:10px ">
        <h4 style=" font-weight:bold; color:red">Tên sách: @Model.TenSach</h4>
        <p style="text-align:justify"><span style="font-weight:bold ">Mô tả: </span>@Model.MoTa</p>
        <p style=" font-weight:bold"> Giá bán :<span style="color:red; font-size:16pt">@Model.GiaBan VNĐ</span></p>
    </div>
    @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMaSach = Model.MaSach, @strURL = Request.Url.ToString() }))
    {
        <div id="dat-mua">
            <a href="@Url.Action("ThemGioHang", "GioHang", new { @iMaSach = @Model.MaSach, @strURL=Request.Url.ToString()})" class="list-group-item">
                ĐẶT MUA
            </a>
        </div>
    }

</div>




                       
