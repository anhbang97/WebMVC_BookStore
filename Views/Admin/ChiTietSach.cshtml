@model WebMVC_BookStore.Models.Sach

@{
    ViewBag.Title = "ChiTietSach";
    Layout = "~/Views/Layout/_LayoutAdmin.cshtml";
}

<div class="section-title-5 mb-30">
    <h2> Chi Tiết Sách </h2>
</div>
<div>
    
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            Tên sách:
        </dt>
       

        <dd>
            @Html.DisplayFor(model => model.TenSach)
        </dd>
        <dt>
            Giá bán:
        </dt>
       

        <dd>
           @String.Format("{0:0,0}",Model.GiaBan) VNĐ
        </dd>
        <dt>
            Mô tả:
        </dt>
        

        <dd style="width:600px;text-align:justify">
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
               Ảnh bìa:
        </dt>

        <dd width="120px">
           <img src="@Url.Content("~/img/HinhAnhSanPham/" + Model.AnhBia)"  />
        </dd>

        <dt>
            Ngày cập nhật:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayCapNhat)
        </dd>

        <dt>
            Số lượng tồn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuongTon)
        </dd>

        <dt>
            Chủ đề:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ChuDe.MaChuDe)
        </dd>

        <dt>
            Nhà xuất bản:

        <dd>
            @Html.DisplayFor(model => model.NhaXuatBan.MaNXB)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Điều chỉnh", "SuaSach", new { id = Model.MaSach }) |
    @Html.ActionLink("Trở về", "Sach")
</p>
