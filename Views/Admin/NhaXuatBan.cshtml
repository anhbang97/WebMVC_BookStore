@model IEnumerable<WebMVC_BookStore.Models.NhaXuatBan>

@{
    ViewBag.Title = "NhaXuatBan";
    Layout = "~/Views/Layout/_LayoutAdmin.cshtml";
}

<div class="section-title-5 mb-30">
    <h2>Quản Lý Thông Tin Nhà Xuất Bản</h2>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenNXB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoDienThoai)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNXB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaNXB }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaNXB }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaNXB })
            </td>
        </tr>
    }

</table>
